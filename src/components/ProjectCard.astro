---
import type { Project } from "../types";

interface Props {
  project: Project;
}

const { project } = Astro.props;

const roleLabel = project.role === "author" ? "Author" : "Contributor";
const roleColor =
  project.role === "author" ? "var(--color-accent)" : "var(--color-text-muted)";
---

<a
  href={project.url}
  target="_blank"
  rel="noopener noreferrer"
  class="group block rounded-lg p-5 transition-all hover:scale-[1.02]"
  style="background-color: var(--color-bg-secondary); border: 1px solid var(--color-border);"
>
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0 flex-1">
      <div class="flex items-center gap-2 flex-wrap">
        <h3
          class="text-base font-semibold truncate group-hover:underline"
          style="color: var(--color-text);"
        >
          {project.name}
        </h3>
        <span
          class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium"
          style={`background-color: color-mix(in srgb, ${roleColor} 15%, transparent); color: ${roleColor};`}
        >
          {roleLabel}
        </span>
      </div>
      <p
        class="mt-2 text-sm line-clamp-2"
        style="color: var(--color-text-secondary);"
      >
        {project.description}
      </p>
      <div class="mt-3 flex items-center gap-4 flex-wrap">
        <span
          class="inline-flex items-center gap-1.5 text-xs font-medium"
          style="color: var(--color-text-muted);"
        >
          <span
            class="h-3 w-3 rounded-full"
            style="background-color: var(--color-accent);"></span>
          {project.language}
        </span>
        {
          project.stars > 0 && (
            <span
              class="inline-flex items-center gap-1 text-xs"
              style="color: var(--color-text-muted);"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              {project.stars}
            </span>
          )
        }
      </div>
    </div>
    <svg
      class="h-5 w-5 shrink-0 opacity-0 transition-opacity group-hover:opacity-100"
      style="color: var(--color-text-muted);"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
      ></path>
    </svg>
  </div>
</a>
